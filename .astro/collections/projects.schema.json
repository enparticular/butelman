{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "music",
            "cinema/theater"
          ],
          "default": "music"
        },
        "image": {
          "type": "object",
          "properties": {
            "src": {
              "type": "string"
            },
            "alt": {
              "type": "string",
              "default": "Project image"
            }
          },
          "required": [
            "src"
          ],
          "additionalProperties": false
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "title",
              "url"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "composición",
              "intérprete",
              "producción",
              "arreglos"
            ]
          },
          "default": []
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "order": {
          "type": "number"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "image"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}