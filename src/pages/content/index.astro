---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Generate paths for all pages
export async function getStaticPaths() {
  const pages = await getCollection('pages');
  return pages.map(page => ({
    params: { slug: page.slug },
    props: { page }
  }));
}

const { page } = Astro.props;

// Process the content
const { Content } = await page.render();
---

<Layout title={page.data.title}>
  <main class="content-page">
    <article>
      <h1>{page.data.title}</h1>
      
      {page.data.image && (
        <div class="page-image">
          <img src={page.data.image.src} alt={page.data.image.alt || page.data.title} />
        </div>
      )}
      
      <div class="page-content">
        <Content />
      </div>
    </article>
  </main>
</Layout>

<style>
  .content-page {
    max-width: 800px;
    margin: 0 auto;
  }
  
  h1 {
    margin-bottom: 1.5rem;
  }
  
  .page-image {
    margin-bottom: 2rem;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .page-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .page-content {
    line-height: 1.6;
  }
  
  /* Additional styling for markdown content */
  .page-content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .page-content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .page-content :global(p) {
    margin-bottom: 1rem;
  }
  
  .page-content :global(ul), .page-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .page-content :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .page-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 1.5rem 0;
  }
  
  .page-content :global(blockquote) {
    border-left: 4px solid #eaeaea;
    padding-left: 1rem;
    font-style: italic;
    color: #666;
    margin: 1.5rem 0;
  }
</style>