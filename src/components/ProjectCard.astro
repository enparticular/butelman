---
const { project } = Astro.props;

interface ProjectLink {
  title: string;
  url: string;
}
---

<article class="bg-white border border-[#bbb] overflow-hidden flex flex-col h-full">
  <div class="h-48 overflow-hidden">
    <img src={project.data.image.src} alt={project.data.image.alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" />
  </div>
  <div class="p-6 flex flex-col grow">
    <h3 class="text-xl font-bold text-gray-800 mb-3">{project.data.title}</h3>
    <p class="text-gray-600 mb-4 grow">{project.data.description}</p>
    <div class="mt-auto">
     
      {project.data.links && project.data.links.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-3">
          {project.data.links.map((link: ProjectLink) => (
            <a href={link.url} target="_blank" rel="noopener noreferrer" class="text-sm bg-black hover:bg-[#333] text-white px-3 py-1 rounded transition-colors">
              {link.title}
            </a>
          ))}
        </div>
      )}

      {project.data.tags && project.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {project.data.tags.map((tag: string) => (
            <span class="text-sm bg-[#888] text-white px-3 py-1 rounded">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </div>
</article>