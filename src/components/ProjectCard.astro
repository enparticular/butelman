---
const { project } = Astro.props;

interface ProjectLink {
  title: string;
  url: string;
}
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow flex flex-col h-full">
  <div class="h-48 overflow-hidden">
    <img src={project.data.image.src} alt={project.data.image.alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" />
  </div>
  <div class="p-6 flex flex-col grow">
    <h3 class="text-xl font-bold text-gray-800 mb-3">{project.data.title}</h3>
    <p class="text-gray-600 mb-4 grow">{project.data.description}</p>
    <div class="mt-auto">
     
      {project.data.links && project.data.links.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {project.data.links.map((link: ProjectLink) => (
            <a href={link.url} target="_blank" rel="noopener noreferrer" class="text-sm bg-gray-100 hover:bg-gray-200 text-gray-700 px-3 py-1 rounded-full transition-colors">
              {link.title}
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
</article>